# =============================================================================
# Packer Variablen Beispiel-Konfiguration
# =============================================================================
# Kopieren Sie diese Datei zu 'packer.pkrvars.hcl' und füllen Sie die Werte
# mit Ihren spezifischen OpenStack-Konfigurationen.
#
# WICHTIG: Fügen Sie packer.pkrvars.hcl NICHT zu Git hinzu!
# =============================================================================

# Name des zu erstellenden Images (Output)
image_name = "my-app-image"

# Base-Image in OpenStack (Input) - verfügbare Images anzeigen:
# openstack image list
source_image_name = "Ubuntu 22.04"

# Flavor für Build-VM - verfügbare Flavors anzeigen:
# openstack flavor list
flavor = "gp1.small"

# Netzwerk-UUIDs für Build-VM - verfügbare Netzwerke anzeigen:
# openstack network list
networks = ["12345678-1234-1234-1234-123456789abc"]

# =============================================================================
# OPTIONAL: Erweiterte Build-Konfiguration
# =============================================================================

# Security Groups für Build-VM (muss SSH von Ihrem Runner erlauben)
# openstack security group list
# security_groups = ["default", "allow-ssh"]

# Falls Build-VM extern erreichbar sein muss (für SSH vom Internet)
# use_floating_ip = true
# floating_ip_pool = "external"

# SSH-Benutzer (abhängig vom Base-Image)
# ssh_username = "ubuntu"  # für Ubuntu
# ssh_username = "centos"  # für CentOS
# ssh_username = "cloud-user"  # für RHEL
